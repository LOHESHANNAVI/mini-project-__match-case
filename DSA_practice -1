import logging
import html

    
logging.basicConfig(level=logging.INFO)


day = "Monday"

switch = {
    "Monday": "Start of the work week!",
    "Tuesday": "Second day!",
    "Wednesday": "Midweek days",
    "Thursday": "Midweek days",
    "Friday": "Last work day!"
}

